generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Appointment {
  id                String   @id @default(cuid())
  calComBookingId   Int      // Cal.com booking ID (removed @unique)
  calComUid         String   @unique // Cal.com unique identifier
  
  // Attendee Information
  attendeeName        String
  attendeeEmail       String
  attendeeTimezone    String
  attendeePhoneNumber String? // NEW FIELD
  
  // Booking Details
  title             String
  description       String?
  startTime         DateTime
  endTime           DateTime
  status            BookingStatus @default(CONFIRMED)
  
  // Custom Fields (from Cal.com form responses)
  companyName         String?
  serviceInterest     String?
  specialRequirements String? @db.Text
  reason              String? @db.Text // NEW FIELD
  vim                 String? // NEW FIELD - internal variable
  
  // Metadata
  meetingUrl        String?
  cancellationReason String?
  rescheduleUid     String? // Links to new booking if rescheduled
  
  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([attendeeEmail])
  @@index([startTime])
  @@index([status])
  @@index([calComUid])
  @@index([calComBookingId])
  @@map("appointments")
}

model WebhookLog {
  id            String   @id @default(cuid())
  eventType     String
  payload       Json
  success       Boolean  @default(true)
  errorMessage  String?  @db.Text
  processingTime Int?    // milliseconds
  createdAt     DateTime @default(now())
  
  @@index([eventType])
  @@index([createdAt])
  @@index([success])
  @@map("webhook_logs")
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
  RESCHEDULED
  NO_SHOW
}
