generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Appointment {
  id                String   @id @default(cuid())
  calComBookingId   Int      @unique // Cal.com booking ID
  calComUid         String   @unique // Cal.com unique identifier
  
  // Attendee Information
  attendeeName      String
  attendeeEmail     String
  attendeeTimezone  String
  
  // Booking Details
  title             String
  description       String?
  startTime         DateTime
  endTime           DateTime
  status            BookingStatus @default(CONFIRMED)
  
  // Custom Fields
  companyName       String?
  serviceInterest   String?
  specialRequirements String? @db.Text
  
  // Metadata
  meetingUrl        String?
  cancellationReason String?
  rescheduleUid     String? // Links to new booking if rescheduled
  
  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([attendeeEmail])
  @@index([startTime])
  @@index([status])
  @@map("appointments")
}

model WebhookLog {
  id            String   @id @default(cuid())
  eventType     String
  payload       Json
  success       Boolean  @default(true)
  errorMessage  String?  @db.Text
  createdAt     DateTime @default(now())
  
  @@index([eventType])
  @@index([createdAt])
  @@map("webhook_logs")
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
  RESCHEDULED
  NO_SHOW
}
